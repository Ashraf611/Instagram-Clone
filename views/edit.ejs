<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    
</head>
<body>

    <% if (typeof problem !== "undefined" && problem) { %>
        <div class="alert alert-danger" role="alert">
            <%-problem %>
        </div>
        <% } %>


    <div class="content ms-250">
        <div class="container mt-5">


            <div class="row mb-4">
                <div class="col-md-8">
                    <h3>Edit Profile</h3>
                </div>
                <div class="col-md-4">

                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="profile-picture mb-4">
                        <img style="margin-left: 107px;" src="/uploads/<%=user.profilePicture %>" width="200" height="200" alt="Profile Picture" class="img-fluid rounded-circle">
                    </div>
                    <button class="btn btn-outline-primary w-100">Change Profile Picture</button>
                </div>

                <div class="col-md-8">
                    <form action="/home/updateProfile" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="fullName" class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="fullName" name="fullName" value="<%= user.fullName %>" required>
                        </div>

                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" id="username" name="username" value="<%= user.username %>" required>
                        </div>

                        <div class="mb-3">
                            <label for="bio" class="form-label">Bio</label>
                            <textarea class="form-control" id="bio" name="bio" rows="3"><%= user.bio %></textarea>
                        </div>

                        <div class="mb-3">
                            <input type="hidden" name="old_pic" id="old_pic" value="<%= user.profilePicture %>">
                            <label for="profilePic" class="form-label">Profile Picture</label>
                            <input type="file" class="form-control" id="image" name="image">
                            <small class="form-text text-muted">Upload a new profile picture (optional)</small>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/home/profile" type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</a>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>

    <div class="modal fade" id="editProfileModal" tabindex="-1" aria-labelledby="editProfileModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editProfileModalLabel">Edit Profile</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                </div>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
